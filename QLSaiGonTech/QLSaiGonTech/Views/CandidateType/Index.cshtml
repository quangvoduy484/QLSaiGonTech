
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Layout/index.css" rel="stylesheet" />
    <link href="~/Libary/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Libary/css/font-awesome.min.css" rel="stylesheet" />
    
</head>
<body>
    <header>

                <nav class="navbar navbar-expand-lg navbar-light bg-info">
                        <a class="navbar-brand text-center" href="#">Admin SaiGonTech</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse " id="navbarSupportedContent">
                                <ul class="nav navbar-nav  ml-auto">
                                        <li class="nav-link">
                                                <a href="" class="text-dark nav-item">Login</a>
                                        </li>
                                        <li class="nav-link">
                                                <a href="" class="text-dark nav-item">Logout</a>
                                        </li>
                                </ul>

                        </div>



                </nav>


        </header>

      <div class="content mr-3">
                <div class="row">
                        <div class="col-md-3 col-sm-4 col-lg-2 .col-xl-2 menu-option">

                                <ul class="nav flex-column bg-dark">
                                        <li class=" nav-item ">
                                                <a href="#" class="nav-link">Sinh Vien</a>
                                        </li>
                                        <li class=" nav-item">
                                                <a href="#" class="nav-link">Sinh Vien</a>
                                        </li>
                                        <li class="nav-item">
                                                <a href="#" class="nav-link">Thống kê học phí</a>
                                        </li>
                                        <li class=" nav-item">
                                                <a href="#" class="nav-link">Bản đồ</a>
                                        </li>
                                </ul>


                        </div>
                        <div class="content col-sm-8 col-md-9 .col-xl-10 col-lg-10" style="padding:20px">
                            @* chuyển action bằng link    *@
                            <a href="@Url.Action("Create","CandidateType")">ADD new CandidateType</a>
                                <table class="table table-bordered table-hover">
                                        <thead class="bg-info">
                                                <tr>
                                                        <th scope="col">STT</th>
                                                        <th scope="col">ID</th>
                                                        <th scope="col">Name</th>
                                                        <th scope="col">Update</th>
                                                        
                                                </tr>
                                        </thead>
                                        <tbody>
                                        
                                               @foreach(var cn in ViewBag.listchuongtrinh)
                                               {
                                                  
                                                   <tr>
                                                        <th scope="row">i</th>
                                                        <td>@cn.ID_CANDIDATE</td>
                                                        <td>@cn.CANDIDATENAME</td>
                                                      
                                                        <td>
                                                              <a onclick="return confirm('Are you sure?')" href='@Url.Action("Delete", "CandidateType", new { id=cn.ID_CANDIDATE })'>Delete</a> |
                                                               <a  href='@Url.Action("Edit", "CandidateType", new { id=cn.ID_CANDIDATE })'>Edit</a>
                                                        </td>
                                                   </tr>
                                                   
                                               }
                                        </tbody>
                                </table>
                        </div>
                </div>




        </div>

        <div class="modal fade" id="update" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                                <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalCenterTitle">Update</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                        </button>
                                </div>
                                <div class="modal-body">
                                        ...
                                </div>
                                <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                        </div>
                </div>
        </div>
        <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                                <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalCenterTitle">Delete</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                        </button>
                                </div>
                                <div class="modal-body">
                                        ...
                                </div>
                                <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                        </div>
                </div>
        </div>

    

    <script src="~/Libary/js/jquery-3.3.1.min.js"></script>
    <script src="~/Libary/js/bootstrap.bundle.min.js"></script>
</body>
</html>
